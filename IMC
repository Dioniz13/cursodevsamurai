<html>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <script>
var peso = parseFloat(prompt("Digite seu peso:"));
var altura = parseFloat(prompt("Digite sua altura:"));
var resultado = peso / (altura * altura);

if (resultado < 18.5) {
    alert(`Seu IMC é de ${resultado.toFixed(2)} e você está abaixo do peso`);
} else if (resultado < 24.9) {
    alert(`Seu IMC é de ${resultado.toFixed(2)} e você está com o peso considerado normal`);
} else if (resultado < 29.9) {
    alert(`Seu IMC é de ${resultado.toFixed(2)} e você está com sobrepeso`);
} else if (resultado < 34.9) {
    alert(`Seu IMC é de ${resultado.toFixed(2)} e você está com Obesidade grau 1`);
} else if (resultado < 39.9) {
    alert(`Seu IMC é de ${resultado.toFixed(2)} e você está com Obesidade grau 2`);
} else if (resultado >= 40) {
    alert(`Seu IMC é de ${resultado.toFixed(2)} e você está com Obesidade grau 3`);
}

    </script>
</html>
